            text: "Enter item: "
            on_text_validate: app.on_side_change(self)
        Button:
            text: "Submit"
            on_press: root.pressSBP()
            height: 100
            width: 500
            size_hint_y: None
            size_hint_x: 1
        Label:
            id: itemSBP
