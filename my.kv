                root.manager.transition.direction = "left"
        Button:
            id: EditList
            text: 'Edit My List'
            background_color: "white"
            on_release:
                app.root.current = "EditMyList"
                root.manager.transition.direction = "left"
        Button:
            text: "Go Back"
            on_release:
                app.root.current = "options"
                root.manager.transition.direction = "right"

