#:kivy 2.1.0
WindowManager:
    MainWidget:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:

<MainWidget>:
    name: "main"

    GridLayout:
        cols: 1
        rows: 2
        Label:
            id: firstlabel
            text: 'Welcome to Grocery Buddy!'
            color: "blue"
            font_size: self.width/20
            background_color: "white"
        Button:
            id: enter
            text: 'Enter'
            background_color: "white"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"
<SecondWindow>
    name: "second"
    GridLayout:
        cols: 1
        rows: 7
        Label:
            id: firstlabel
            text: 'What would you like to do?'
            color: "blue"
            font_size: self.width/20
            background_color: "white"
        Button:
            id: Mylist
            text: 'My List'
            background_color: "white"
            on_release:
                app.root.current = "MyList"
                root.manager.transition.direction = "left"
        Button:
            id: ShopByItem
            text: 'Shop by Item'
            background_color: "white"
            on_release:
                app.root.current = "MyList"
                root.manager.transition.direction = "left"
        Button:
            id: Store
            text: 'Shop by Store'
            background_color: "white"
            on_release:
                app.root.current = "Stores"
                root.manager.transition.direction = "right"
        Button:
            id: Sales
            text: 'Sales'
            background_color: "white"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"
        Button:
            text: "Settings"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Button:
            text: "Go Back"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
<ThirdWindow>
    name: "MyList"
    GridLayout:
        cols: 1
        rows: 3
        Button:
            id: ViewList
            text: 'View My List'
            background_color: "white"
            on_release:
                app.root.current = "MyList"
                root.manager.transition.direction = "left"
        Button:
            id: EditList
            text: 'Edit My List'
            background_color: "white"
            on_release:
                app.root.current = "MyList"
                root.manager.transition.direction = "left"
        Button:
            text: "Go Back"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"

<FourthWindow>
    name: "Stores"
    GridLayout:
        cols: 1
        rows: 2
        Button:
            text: "Whole Foods"
            on_release:
                app.root.current = "WholeFoods"
                root.manager.transition.direction = "right"
        Button:
            text: "Go Back"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"

<FifthWindow>
    name: "WholeFoods"
    
    GridLayout:
        cols: 1
        rows: 5
        ScrollLabel:
            Label:
                text: root.demo()
        TextInput:
            height: 50
            width: 500
            size_hint_y: None
            size_hint_x: 1
            multiline: False
            id: userInput
            text: "Enter item: "
            on_text_validate: app.on_side_change(self)
        Button:
            text: "Submit"
            on_press: root.press()
            height: 30
            width: 500
            size_hint_y: None
            size_hint_x: 1
        Label:
            id: itemInStock
            text: ""
            height: 50
            width: 500
            size_hint_y: None
            size_hint_x: 1
        Button: 
            height: 30
            width: 500
            size_hint_y: None
            size_hint_x: 1
            text: "Go Back"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "right"
            
